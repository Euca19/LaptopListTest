<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <include
                android:id="@+id/includedToolbar"
                layout="@layout/toolbar" />

                <LinearLayout
                    android:id="@+id/llProductDetailcontainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/ivLaptop"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@color/white"
                        android:src="@drawable/ic_placeholde"
                        android:padding="16sp"
                        android:paddingBottom="16dp"
                         />

                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginTop="2dp"
                        android:fontFamily="sans-serif"
                        android:gravity="center_horizontal"
                        android:text="Granola con Trozos de Almendras Tosh x 300 g"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="24sp"
                        android:textStyle="normal" />

                    <View
                        android:id="@+id/separador_1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="12dp"
                        android:background="@color/colorPrimaryText"
                        android:visibility="visible" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DescripciÃ³n"
                        android:paddingTop="10dp"
                        android:textSize="18sp"
                        android:paddingLeft="25dp" />



                    <android.support.v4.widget.NestedScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:visibility="visible">

                    <com.uncopt.android.widget.text.justify.JustifiedTextView
                        android:id="@+id/tvDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hardwareAccelerated="false"
                        android:paddingBottom="12dp"
                        android:paddingLeft="25dp"
                        android:paddingRight="25dp"
                        android:paddingTop="18dp"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                    </android.support.v4.widget.NestedScrollView>

                </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</layout>